# ==================== General ====================
ENVIRONMENT=development
LOG_LEVEL=debug

# ==================== Databases ====================
# Auth Service Database
AUTH_DB_HOST=localhost
AUTH_DB_PORT=5432
AUTH_DB_NAME=auth_db
AUTH_DB_USER=postgres
AUTH_DB_PASSWORD=postgres
AUTH_DB_SSLMODE=disable

# Restaurant Service Database
RESTAURANT_DB_HOST=localhost
RESTAURANT_DB_PORT=5433
RESTAURANT_DB_NAME=restaurant_db
RESTAURANT_DB_USER=postgres
RESTAURANT_DB_PASSWORD=postgres
RESTAURANT_DB_SSLMODE=disable

# Booking Service Database
BOOKING_DB_HOST=localhost
BOOKING_DB_PORT=5434
BOOKING_DB_NAME=booking_db
BOOKING_DB_USER=postgres
BOOKING_DB_PASSWORD=postgres
BOOKING_DB_SSLMODE=disable

# Spider Service Database
SPIDER_DB_HOST=localhost
SPIDER_DB_PORT=5435
SPIDER_DB_NAME=spider_db
SPIDER_DB_USER=postgres
SPIDER_DB_PASSWORD=postgres
SPIDER_DB_SSLMODE=disable

# Mail Service Database
MAIL_DB_HOST=localhost
MAIL_DB_PORT=5436
MAIL_DB_NAME=mail_db
MAIL_DB_USER=postgres
MAIL_DB_PASSWORD=postgres
MAIL_DB_SSLMODE=disable

# ==================== Redis ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Auth Service Redis DB
AUTH_REDIS_DB=0

# Restaurant Service Redis DB
RESTAURANT_REDIS_DB=1

# Booking Service Redis DB
BOOKING_REDIS_DB=2

# Spider Service Redis DB
SPIDER_REDIS_DB=3

# API Gateway Redis DB
GATEWAY_REDIS_DB=4

# ==================== Kafka ====================
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=tabelogo-group

# Kafka Topics
KAFKA_TOPIC_USER_EVENTS=user-events
KAFKA_TOPIC_RESTAURANT_EVENTS=restaurant-events
KAFKA_TOPIC_BOOKING_EVENTS=booking-events
KAFKA_TOPIC_SPIDER_RESULTS=spider-results

# ==================== JWT ====================
JWT_SECRET=your-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRE=15m
JWT_REFRESH_TOKEN_EXPIRE=168h  # 7 days

# ==================== Service Ports ====================
API_GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8081
RESTAURANT_SERVICE_PORT=8082
BOOKING_SERVICE_PORT=8083
SPIDER_SERVICE_PORT=8084
MAIL_SERVICE_PORT=8085
MAP_SERVICE_PORT=8086

# ==================== gRPC Ports ====================
AUTH_GRPC_PORT=9081
RESTAURANT_GRPC_PORT=9082
BOOKING_GRPC_PORT=9083
SPIDER_GRPC_PORT=9084
MAIL_GRPC_PORT=9085
MAP_GRPC_PORT=9086

# ==================== External APIs ====================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
OPENTABLE_API_KEY=your-opentable-api-key

# ==================== SMTP (Mail Service) ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@tabelogo.com

# ==================== Monitoring ====================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
