# Restaurant Service Environment Variables

# Server Configuration
SERVER_PORT=18082
GRPC_PORT=19082
SERVER_ENVIRONMENT=development

# Database Configuration (Restaurant DB)
# Note: Use 5433 for local development (to avoid conflict with auth DB on 5432)
#       Docker compose will handle port mapping (5433:5432)
DB_HOST=localhost
DB_PORT=5433
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=restaurant_db
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=1h

# Redis Configuration (DB 1 for restaurant cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# JWT Configuration
JWT_SECRET=change-me-in-production
JWT_ACCESS_TOKEN_EXPIRE=15m
JWT_REFRESH_TOKEN_EXPIRE=168h

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=restaurant-service-group
