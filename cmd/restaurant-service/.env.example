# Restaurant Service Environment Variables

# Server Configuration
SERVER_PORT=18082
SERVER_ENVIRONMENT=development

# Database Configuration (Restaurant DB)
# Note: Use 5433 for local development (to avoid conflict with auth DB on 5432)
#       Docker compose will handle port mapping (5433:5432)
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=restaurant_db
DATABASE_MAX_OPEN_CONNS=100
DATABASE_MAX_IDLE_CONNS=10
DATABASE_CONN_MAX_LIFETIME=1h

# Redis Configuration (DB 1 for restaurant cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
