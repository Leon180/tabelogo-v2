# Spider Service Configuration Example
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development
LOG_LEVEL=info

# Server
SERVER_PORT=8084
GRPC_PORT=19084

# Database (for future PostgreSQL implementation)
DB_HOST=localhost
DB_PORT=5434
DB_NAME=spider_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL_MODE=disable

# Redis (for future job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Scraper Configuration
SCRAPER_MAX_CONCURRENT=4
SCRAPER_TIMEOUT=10s
SCRAPER_RETRY_COUNT=3
SCRAPER_REQUESTS_PER_SECOND=2
SCRAPER_DELAY_BETWEEN_REQUESTS=500ms
SCRAPER_MAX_LINKS=4
