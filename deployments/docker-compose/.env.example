# Auth Service Environment Configuration

# Environment
ENVIRONMENT=development
LOG_LEVEL=info

# Server Ports
SERVER_PORT=8080
GRPC_PORT=9090

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=auth_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSLMODE=disable

# Database Connection Pool
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=1h

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=change-me-in-production-must-be-at-least-32-characters-long
JWT_ACCESS_TOKEN_EXPIRE=15m
JWT_REFRESH_TOKEN_EXPIRE=168h

# Kafka Configuration (for future use)
KAFKA_BROKERS=kafka:9092
KAFKA_GROUP_ID=auth-service-group
