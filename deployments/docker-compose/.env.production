# Auth Service Environment Configuration (Production Template)

# Environment
ENVIRONMENT=production
LOG_LEVEL=info

# Server Ports
SERVER_PORT=8080
GRPC_PORT=9090

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=auth_db
DB_USER=postgres
DB_PASSWORD=${DB_PASSWORD}  # Set via secrets management
DB_SSLMODE=require

# Database Connection Pool
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=1h

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}  # Set via secrets management
REDIS_DB=0

# JWT Configuration
JWT_SECRET=${JWT_SECRET}  # Set via secrets management (min 32 chars)
JWT_ACCESS_TOKEN_EXPIRE=15m
JWT_REFRESH_TOKEN_EXPIRE=168h

# Kafka Configuration
KAFKA_BROKERS=kafka:9092
KAFKA_GROUP_ID=auth-service-group
